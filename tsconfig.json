{
  "compilerOptions": {
    "target": "ESNext", 
    "importHelpers": true,
    
    "module": "ESNext",  
    "moduleResolution": "Node",

    "allowJs": true,

    "lib": ["DOM", "ESNext"],

    "declaration": true,
    "declarationMap": false,
    "emitDeclarationOnly": true,
    "declarationDir": "dist/types",
    
    "outDir": "dist",            
    "rootDir": "src/plugin",

    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    "types": [
      "vite-plugin-glsl/ext"
    ]
  },
  "include": ["src/plugin", "src/declarations.d.ts"]
}